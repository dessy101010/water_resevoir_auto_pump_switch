void loop() {

  // taking three distance reading, choosing by frequency.
  // This part ideally should be made into a function.

  distance1 = sonicScan(trig_, echo_);
  delay(5);
  distance2 = sonicScan(trig_, echo_);
  delay(5);
  distance3 = sonicScan(trig_, echo_);
  distance_ = (distance1 + distance2 + distance3)/3  //average distance reading.
  


  if (distance_ > 100) {
  
  
  }
   

}
